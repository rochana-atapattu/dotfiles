#!/usr/bin/env bash

if [[ $# -eq 1 ]]; then
    selected=$1
else
    IFS=$'\n' read -r selected <<< "$(find ~/repo ~/repo/misc ~/repo/rochana-atapattu/ ~/repo/prodoscore "$HOME/Library/Mobile Documents/iCloud~md~obsidian/Documents/" -mindepth 1 -maxdepth 1 -type d | fzf)"
fi

if [[ -z $selected ]]; then
    exit 0
fi

selected_name=$(basename "$selected" | tr '. ' '_')
echo $selected_name
echo $selected
tmux_running=$(pgrep tmux)

if [[ -z $TMUX ]] && [[ -z $tmux_running ]]; then
    tmux new-session -s $selected_name -c "$selected"
    exit 0
fi

if ! tmux has-session -t=$selected_name 2> /dev/null; then
    tmux new-session -ds $selected_name -c "$selected"
fi

# Check if inside a tmux session, if not, attach to the session instead of switching
if [[ -z $TMUX ]]; then
    tmux attach-session -t $selected_name
else
    tmux switch-client -t $selected_name
fi
